# Tanım: PHP için MySQL modulü
# URL: http://www.php.net
# Paketçi: milisarge halityilmaz1982
# Gerekler: mariadb php

isim=php7-mysql
surum=7.1.11
devir=1
kaynak=(http://php.net/distributions/php-$surum.tar.xz)

derle() {
    cd php-$surum

    ./configure --disable-all \
                --enable-pdo=shared \
                --enable-mysqlnd=shared \
                --with-mysql=shared,mysqlnd \
                --with-mysqli=shared,mysqlnd \
                --with-pdo-mysql=shared,mysqlnd
    
    make build-modules

    install -d $PKG/{etc/php/conf.d,usr/lib/php/extensions}
    install -m 755 $SRC/php-${surum}/modules/*mysql*.so $PKG/usr/lib/php/extensions

    printf 'extension=%s\n' {mysqlnd,mysql,mysqli,pdo_mysql}.so \
           > $PKG/etc/php/conf.d/mysql.ini
}
